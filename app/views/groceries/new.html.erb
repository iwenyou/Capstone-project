
<h1>Add new grocery: </h1>
<%= form_tag '/groceries', method: :post do  %>
<div>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
</div>
<div>
    <%= label_tag :made_by %>
    <%= date_field_tag :made_by %>
</div>
<div>
    <%= label_tag :expiration_date %>
    <%= date_field_tag :expiration_date %>
</div>
<div>
    <%= label_tag :catagory %>
    <%= select_tag :catagory_id, options_from_collection_for_select(@catagories, :id, :name, multiple: true) %>
</div>
<%= submit_tag "Submit" %>
<% end %>

<%= button_to "cancel", {:controller => :groceries,
      :action => 'index' }, :method => :get %>
