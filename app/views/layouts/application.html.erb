<!DOCTYPE html>
<html>
    <head>
        <title>CapstoneProject</title>
        <%= csrf_meta_tags %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.green-orange.min.css" />
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>

        <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
            <header class="mdl-layout__header">
                <div class="mdl-layout__header-row">
                    <!-- Title -->
                    <span class="mdl-layout-title" id="header_title">Wheat</span>
                    <!-- Add spacer, to align navigation to the right -->
                    <div class="mdl-layout-spacer"></div>
                    <!-- Navigation. We hide it in small screens. -->
                    <nav class="mdl-navigation">
                        <a class="mdl-navigation__link" href="/groceries"><i class="material-icons" id="groceries_icon">shopping_basket</i></a>
                        <% if !current_user %>
                        <a class="btn btn-default btn-outline btn-circle" data-toggle="collapse" href="#nav-collapse2" aria-expanded="false" aria-controls="nav-collapse2">Sign in</a>
                        <% else %>
                        <a href="/users/<%= current_user.id %>">
                          Hello,
                          <%= current_user.first_name  %></a>
                        <% end %>
                    </nav>
                </div>
            </header>
            <main class="mdl-layout__content">
                <div class="page-content">
                    <!-- Your content goes here -->

                    <!-- flash message -->
                    <% flash.each do |key, message| %>
                    <div>
                        <%= message %>
                    </div>
                    <% end %>

                    <div class="container-fluid">

                      <%= yield %>

                    </div>
                    <!-- flash message end -->

                </div>
            </main>
        </div>

    </body>
</html>
